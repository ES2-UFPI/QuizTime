<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_message %></h1>
    </div>
</div>
<% if @subject.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @subject.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
      
    </div>  
<% end %>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <%= "#{action_message} Assunto/Área" %>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <%= form_with(model: [ :admins_backoffice, @subject], local: true) do |form| %>
                            
                            <div class="form-group">
                                <%= form.label :description %>
                                <%= form.text_field :description, class:"form-control", placeholder:"Descrição do Assunto/Área" %>                               
                            </div>

                           
                            <button type="submit" class="btn btn-default">Salvar</button>
                        <% end %>
                    </div>                              
                </div>             
            </div>
        </div>
    </div>
</div>