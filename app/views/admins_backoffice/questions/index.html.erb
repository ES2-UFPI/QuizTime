<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('message.listing', model: @questions.model_name.human(count: 2)) %></h1>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th><%= translate_attribute(@questions, :description) %></th>
                <th><%= translate_attribute(@questions, :subject) %></th>     
                <th>
                    <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>   
            </tr>
        </thead>
        <tbody>
            <% @questions.each do |question| %>
                <tr>
                    <td><%= question.id %></td>
                    <td><%= question.description.truncate(50) %></td>
                    <td><%= question.subject.description.truncate(30) %></td>  
                    <td style="width: 100px"> 
                        <!--# se passar um objeso ele consegue pegar o id-->                      
                        <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>

                        <%= link_to admins_backoffice_question_path(question), method: :delete,  class:"btn btn-danger btn-circle", data: {confirm: t('message.confirm_with',item: question.description.truncate(15))} do %>
                            <i class="fa fa-minus"></i>
                        <% end %>                    
                    </td>                         
                </tr> 
            <% end %>                                      
        </tbody>
    </table>

    <div class="text-center">
        <%= paginate @questions %>
    </div>

</div>
