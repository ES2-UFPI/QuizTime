<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastrar-se</h1>

          <div class="field">      
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control"  %>
          </div>

          <div class="field">
            <%= f.password_field :password, placeholder:"Senha", class:"form-control" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, placeholder:"ConfirmaÃ§Ã£o da Senha", class:"form-control" %>
          </div>

          <div>
            <%= f.submit "Cadastrar-se" , class:"btn btn-default submit", style:"float: none; margin-left: 0px; width: 70%;" %>
          </div>

          <div class="clearfix"></div>

          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>
